---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import RootAccordion from "@components/RootAccordion.astro";
import WorkExperience from "@components/WorkExperience.astro";
import Education from "@components/Education.astro";
import Publications from "@components/Publications.astro";
import Media from "@components/Media.astro";
import Awards from "@components/Awards.astro";
import { CV } from "@consts";

await getCollection("cv");
---

<PageLayout title={CV.TITLE} description={CV.DESCRIPTION}>
  <Container>
    <div class="space-y-6">
      <RootAccordion title="Work Experience" emoji="💼">
        <WorkExperience />
      </RootAccordion>

      <RootAccordion title="Education" emoji="🎓">
        <Education />
      </RootAccordion>

      <RootAccordion title="Publications" emoji="📚">
        <Publications />
      </RootAccordion>

      <RootAccordion title="Media" emoji="🎥">
        <Media />
      </RootAccordion>

      <RootAccordion title="Awards" emoji="🏆">
        <Awards />
      </RootAccordion>
    </div>
  </Container>
</PageLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');
  
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
  
  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
</style>
