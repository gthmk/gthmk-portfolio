---
import Container from "@components/Container.astro";
import { SITE } from "@consts";
---

<footer>
  <Container>
    <div class="relative flex justify-center mb-4">
      <div class="absolute left-1/2 -translate-x-1/2 w-[102%] border-b border-gray-400/60"></div>
    </div>
    <div class="flex flex-wrap gap-y-2 justify-between items-center">
      <div class="text-xs md:text-xl">
        © {new Date().getFullYear()} {SITE.NAME}
      </div>
      <div class="flex flex-wrap gap-1 items-center">
        <div class="text-xs md:text-xl">
          Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a>
          <span class="mx-2">·</span>
          <a href="https://github.com/gthmk/site" target="_blank" rel="noopener noreferrer">Source code</a>
        </div>
        <button
          id="theme-toggle-button"
          aria-label="Toggle dark and light mode"
          class="group size-8 flex items-center justify-center rounded-full"
        >
          <svg id="theme-toggle-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover:stroke-black group-hover:dark:stroke-white transition-colors duration-300 ease-in-out">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
        </button>
      </div>
    </div>
  </Container>
</footer>
